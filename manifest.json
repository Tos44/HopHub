{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "1.0.1",
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_icon": "images/logo.png",
    "default_title": "__MSG_extName__",
    "default_popup": "./popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "match_about_blank": true,
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "css/styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "*.png", "*.js", "*.css" ],
      "matches": [ "https://github.com/*" ]
    }
  ]
}